package thinking.chapter17;

import java.io.*;

/**
 * Created by Administrator on 2016/3/22.
 */
public class Redirecting {
    public static void main(String[] args) throws IOException {
        PrintStream console = System.out;
        BufferedInputStream in = new BufferedInputStream(new FileInputStream("F:\\idea-projects\\test\\src\\thinking\\chapter17\\Redirecting.java"));
        PrintStream out = new PrintStream(new BufferedOutputStream(new FileOutputStream("F:\\idea-projects\\test\\src\\thinking\\chapter17\\test.out")));
        System.setIn(in);
        System.setOut(out);
        System.setErr(out);
        BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
        String s;
        while((s = br.readLine()) != null)
        {
            System.out.println(s);
        }
        out.close();
        System.setOut(console);
    }
}
